<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">

    <!-- CheckAttributeMappingAction Dependencies -->
    <type name="MiniOrange\OAuth\Controller\Actions\CheckAttributeMappingAction">
        <arguments>
            <argument name="testAction" xsi:type="object">MiniOrange\OAuth\Controller\Actions\ShowTestResults</argument>
            <argument name="processUserAction" xsi:type="object">MiniOrange\OAuth\Controller\Actions\ProcessUserAction</argument>
            <argument name="userFactory" xsi:type="object">Magento\User\Model\UserFactory</argument>
            <argument name="adminSession" xsi:type="object">Magento\Backend\Model\Auth\Session</argument>
            <argument name="cookieManager" xsi:type="object">Magento\Framework\Stdlib\CookieManagerInterface</argument>
            <argument name="adminConfig" xsi:type="object">Magento\Backend\Model\Session\AdminConfig</argument>
            <argument name="cookieMetadataFactory" xsi:type="object">Magento\Framework\Stdlib\Cookie\CookieMetadataFactory</argument>
            <argument name="backendUrl" xsi:type="object">Magento\Backend\Model\UrlInterface</argument>
            <argument name="roleCollection" xsi:type="object">Magento\Authorization\Model\ResourceModel\Role\Collection</argument>
            <argument name="randomUtility" xsi:type="object">Magento\Framework\Math\Random</argument>
        </arguments>
    </type>

    <!-- ProcessUserAction Dependencies -->
    <type name="MiniOrange\OAuth\Controller\Actions\ProcessUserAction">
        <arguments>
            <argument name="resultRedirectFactory" xsi:type="object">Magento\Framework\Controller\Result\RedirectFactory</argument>
            <argument name="messageManager" xsi:type="object">Magento\Framework\Message\ManagerInterface</argument>
        </arguments>
    </type>

    <!-- ReadAuthorizationResponse Dependencies -->
    <type name="MiniOrange\OAuth\Controller\Actions\ReadAuthorizationResponse">
        <arguments>
            <argument name="oidcAuthService" xsi:type="object">MiniOrange\OAuth\Model\Service\OidcAuthenticationService</argument>
            <argument name="attrMappingAction" xsi:type="object">MiniOrange\OAuth\Controller\Actions\CheckAttributeMappingAction</argument>
        </arguments>
    </type>

    <!-- OIDC Credential Adapter Configuration -->
    <type name="MiniOrange\OAuth\Model\Auth\OidcCredentialAdapter">
        <arguments>
            <argument name="userFactory" xsi:type="object">Magento\User\Model\UserFactory</argument>
            <argument name="eventManager" xsi:type="object">Magento\Framework\Event\ManagerInterface</argument>
            <argument name="oauthUtility" xsi:type="object">MiniOrange\OAuth\Helper\OAuthUtility</argument>
        </arguments>
    </type>

    <!-- OIDC Credential Plugin Configuration -->
    <type name="MiniOrange\OAuth\Plugin\Auth\OidcCredentialPlugin">
        <arguments>
            <argument name="oidcCredentialAdapter" xsi:type="object">MiniOrange\OAuth\Model\Auth\OidcCredentialAdapter</argument>
            <argument name="oauthUtility" xsi:type="object">MiniOrange\OAuth\Helper\OAuthUtility</argument>
        </arguments>
    </type>

    <!-- OIDC Admin Callback Controller Configuration -->
    <type name="MiniOrange\OAuth\Controller\Adminhtml\Actions\Oidccallback">
        <arguments>
            <argument name="userFactory" xsi:type="object">Magento\User\Model\UserFactory</argument>
            <argument name="auth" xsi:type="object">Magento\Backend\Model\Auth</argument>
            <argument name="resultFactory" xsi:type="object">Magento\Framework\Controller\ResultFactory</argument>
            <argument name="oauthUtility" xsi:type="object">MiniOrange\OAuth\Helper\OAuthUtility</argument>
            <argument name="messageManager" xsi:type="object">Magento\Framework\Message\ManagerInterface</argument>
            <argument name="url" xsi:type="object">Magento\Framework\UrlInterface</argument>
            <argument name="cookieManager" xsi:type="object">Magento\Framework\Stdlib\CookieManagerInterface</argument>
            <argument name="cookieMetadataFactory" xsi:type="object">Magento\Framework\Stdlib\Cookie\CookieMetadataFactory</argument>
            <argument name="backendUrl" xsi:type="object">Magento\Backend\Model\UrlInterface</argument>
            <argument name="securityHelper" xsi:type="object">MiniOrange\OAuth\Helper\OAuthSecurityHelper</argument>
            <argument name="scopeConfig" xsi:type="object">Magento\Framework\App\Config\ScopeConfigInterface</argument>
        </arguments>
    </type>

    <!-- OAuthSecurityHelper Configuration -->
    <type name="MiniOrange\OAuth\Helper\OAuthSecurityHelper">
        <arguments>
            <argument name="cache" xsi:type="object">Magento\Framework\App\CacheInterface</argument>
            <argument name="oauthUtility" xsi:type="object">MiniOrange\OAuth\Helper\OAuthUtility</argument>
        </arguments>
    </type>

    <!-- Plugin to inject OIDC Credential Adapter when OIDC token detected -->
    <type name="Magento\Backend\Model\Auth">
        <plugin name="admin_login_restriction"
                type="MiniOrange\OAuth\Plugin\AdminLoginRestrictionPlugin"
                sortOrder="5"/>
        <plugin name="oidc_credential_interceptor"
                type="MiniOrange\OAuth\Plugin\Auth\OidcCredentialPlugin"
                sortOrder="10"/>
        <plugin name="oidc_logout_cookie_cleanup"
                type="MiniOrange\OAuth\Plugin\Auth\OidcLogoutPlugin"
                sortOrder="20"/>
    </type>

    <!-- Admin Login Restriction Plugin Configuration -->
    <type name="MiniOrange\OAuth\Plugin\AdminLoginRestrictionPlugin">
        <arguments>
            <argument name="oauthUtility" xsi:type="object">MiniOrange\OAuth\Helper\OAuthUtility</argument>
        </arguments>
    </type>

    <!-- OIDC Logout Plugin Configuration -->
    <type name="MiniOrange\OAuth\Plugin\Auth\OidcLogoutPlugin">
        <arguments>
            <argument name="cookieManager" xsi:type="object">Magento\Framework\Stdlib\CookieManagerInterface</argument>
            <argument name="cookieMetadataFactory" xsi:type="object">Magento\Framework\Stdlib\Cookie\CookieMetadataFactory</argument>
            <argument name="backendUrl" xsi:type="object">Magento\Backend\Model\UrlInterface</argument>
            <argument name="oauthUtility" xsi:type="object">MiniOrange\OAuth\Helper\OAuthUtility</argument>
        </arguments>
    </type>

    <!-- CAPTCHA Bypass Plugin for OIDC Authentication -->
    <type name="MiniOrange\OAuth\Plugin\Captcha\OidcCaptchaBypassPlugin">
        <arguments>
            <argument name="oauthUtility" xsi:type="object">MiniOrange\OAuth\Helper\OAuthUtility</argument>
        </arguments>
    </type>

    <!-- Plugin to bypass CAPTCHA validation for OIDC-authenticated users -->
    <type name="Magento\Captcha\Observer\CheckUserLoginBackendObserver">
        <plugin name="oidc_captcha_bypass"
                type="MiniOrange\OAuth\Plugin\Captcha\OidcCaptchaBypassPlugin"
                sortOrder="10"/>
    </type>

    <!-- OIDC Identity Verification Bypass Plugin Configuration -->
    <type name="MiniOrange\OAuth\Plugin\User\OidcIdentityVerificationPlugin">
        <arguments>
            <argument name="cookieManager" xsi:type="object">Magento\Framework\Stdlib\CookieManagerInterface</argument>
            <argument name="oauthUtility" xsi:type="object">MiniOrange\OAuth\Helper\OAuthUtility</argument>
        </arguments>
    </type>

    <!-- Plugin to bypass identity verification for OIDC-authenticated admin users -->
    <type name="Magento\User\Model\User">
        <plugin name="oidc_identity_verification_bypass"
                type="MiniOrange\OAuth\Plugin\User\OidcIdentityVerificationPlugin"
                sortOrder="10"/>
    </type>

    <!-- OIDC Identity Field Plugin Configuration -->
    <type name="MiniOrange\OAuth\Plugin\User\Block\OidcIdentityFieldPlugin">
        <arguments>
            <argument name="cookieManager" xsi:type="object">Magento\Framework\Stdlib\CookieManagerInterface</argument>
            <argument name="oauthUtility" xsi:type="object">MiniOrange\OAuth\Helper\OAuthUtility</argument>
        </arguments>
    </type>

    <!-- Plugin to remove required validation from identity field for OIDC users (User Edit) -->
    <type name="Magento\User\Block\User\Edit\Tab\Main">
        <plugin name="oidc_identity_field_user"
                type="MiniOrange\OAuth\Plugin\User\Block\OidcIdentityFieldPlugin"
                sortOrder="20"/>
    </type>

    <!-- Plugin to remove required validation from identity field for OIDC users (Role Edit) -->
    <type name="Magento\User\Block\Role\Tab\Info">
        <plugin name="oidc_identity_field_role"
                type="MiniOrange\OAuth\Plugin\User\Block\OidcIdentityFieldPlugin"
                sortOrder="20"/>
    </type>

    <!-- Plugin to remove required validation from identity field for OIDC users (Account Edit) -->
    <type name="Magento\Backend\Block\System\Account\Edit\Form">
        <plugin name="oidc_identity_field_account"
                type="MiniOrange\OAuth\Plugin\User\Block\OidcIdentityFieldPlugin"
                sortOrder="20"/>
    </type>

    <!-- JwtVerifier Cache and Curl Configuration -->
    <type name="MiniOrange\OAuth\Helper\JwtVerifier">
        <arguments>
            <argument name="cache" xsi:type="object">Magento\Framework\App\CacheInterface</argument>
            <argument name="curlFactory" xsi:type="object">Magento\Framework\HTTP\Adapter\CurlFactory</argument>
        </arguments>
    </type>

    <!-- MiniOrange Custom Logger Configuration -->
    <type name="MiniOrange\OAuth\Logger\Handler">
        <arguments>
            <argument name="filesystem" xsi:type="object">Magento\Framework\Filesystem\Driver\File</argument>
        </arguments>
    </type>

    <type name="MiniOrange\OAuth\Logger\Logger">
        <arguments>
            <argument name="name" xsi:type="string">miniorange_oauth</argument>
            <argument name="handlers" xsi:type="array">
                <item name="system" xsi:type="object">MiniOrange\OAuth\Logger\Handler</item>
            </argument>
        </arguments>
    </type>

</config>
