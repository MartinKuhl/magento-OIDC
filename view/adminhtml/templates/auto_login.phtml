        <div id="debug" class="debug"></div>
        
        <script>
            // Debug-Funktion
            function log(message) {
                var debug = document.getElementById('debug');
                debug.innerHTML += message + '<br>';
                console.log(message);
            }
            
            // Cookie-Hilfsfunktion
            function setCookie(name, value, options = {}) {
                options = {
                    path: '/',
                    secure: true,
                    samesite: 'none',
                    ...options
                };
                
                let cookieString = encodeURIComponent(name) + '=' + encodeURIComponent(value);
                
                for (let optionKey in options) {
                    cookieString += '; ' + optionKey;
                    let optionValue = options[optionKey];
                    if (optionValue !== true) {
                        cookieString += '=' + optionValue;
                    }
                }
                
                document.cookie = cookieString;
                log('Cookie gesetzt: ' + name);
            }
            
            // Haupt-Funktion zur Durchführung des Logins
            function performLogin() {
                try {
                    // Debug anzeigen bei Bedarf
                    if (window.location.search.includes('debug=true')) {
                        document.getElementById('debug').style.display = 'block';
                    }
                    
                    log('Auto-Login gestartet');
                    
                    // Cookies setzen
                    // 1. Admin Session Cookie
                    setCookie('admin', '<?php echo addslashes($adminSessionId); ?>', {
                        path: '/admin',
                        expires: new Date(Date.now() + 86400000).toUTCString()
                    });
                    
                    // Admin Session Cookie auch für Root-Pfad
                    setCookie('admin', '<?php echo addslashes($adminSessionId); ?>', {
                        path: '/',
                        expires: new Date(Date.now() + 86400000).toUTCString()
                    });
                    
                    // 2. PHP Session Cookie
                    setCookie('PHPSESSID', '<?php echo addslashes($sessionId); ?>', {
                        path: '/',
                        expires: new Date(Date.now() + 86400000).toUTCString()
                    });
                    
                    // PHP Session Cookie auch für Admin-Pfad
                    setCookie('PHPSESSID', '<?php echo addslashes($sessionId); ?>', {
                        path: '/admin',
                        expires: new Date(Date.now() + 86400000).toUTCString()
                    });
                    
                    // 3. Form Key Cookie
                    setCookie('FORM_KEY', '<?php echo addslashes($formKey); ?>', {
                        path: '/admin',
                        expires: new Date(Date.now() + 86400000).toUTCString(),
                        httpOnly: false
                    });
                    
                    // Form Key Cookie auch für Root-Pfad
                    setCookie('FORM_KEY', '<?php echo addslashes($formKey); ?>', {
                        path: '/',
                        expires: new Date(Date.now() + 86400000).toUTCString(),
                        httpOnly: false
                    });
                    
                    log('Alle Cookies gesetzt');
                    
                    // Erfolg anzeigen
                    setTimeout(function() {
                        document.querySelector('.spinner').style.display = 'none';
                        document.getElementById('success-message').style.display = 'block';
                        
                        // Automatische Weiterleitung
                        setTimeout(function() {
                            window.location.href = '<?php echo addslashes($adminUrl); ?>';
                        }, 2000);
                    }, 2000);
                    
                } catch (error) {
                    log('Fehler beim Login: ' + error.message);
                    document.getElementById('error-message').style.display = 'block';
                    document.querySelector('.spinner').style.display = 'none';
                }
            }
            
            // Auto-Start beim Laden der Seite
            window.addEventListener('DOMContentLoaded', performLogin);
        </script>
