<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="admin_login" />
    <body>
        <!-- OIDC Error Message Block -->
        <referenceContainer name="content">
            <block class="MiniOrange\OAuth\Block\Adminhtml\OidcErrorMessage" 
                   name="oidc_error_message" 
                   template="MiniOrange_OAuth::oidc_error_message.phtml" />
        </referenceContainer>
        
        <!-- SSO Login Button -->
        <referenceContainer name="form.buttons">
            <block class="MiniOrange\OAuth\Block\OAuth" 
                   name="miniorange.oauth.admin.link" 
                   ifconfig="miniorange/oauth/showadminlink"
                   template="adminssobutton.phtml" />
        </referenceContainer>
    </body>
</page>
