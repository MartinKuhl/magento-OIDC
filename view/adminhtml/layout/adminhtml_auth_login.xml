<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="admin_login" />
    <body>
        <!-- OIDC Error Messages -->
        <referenceContainer name="content">
            <block class="MiniOrange\OAuth\Block\Adminhtml\OidcErrorMessage" 
                   name="oidc_error_message_content" 
                   template="MiniOrange_OAuth::oidc_error_message.phtml" 
                   after="-"/>
        </referenceContainer>
        
        <referenceContainer name="root">
            <block class="MiniOrange\OAuth\Block\Adminhtml\OidcErrorMessage" 
                   name="oidc_error_message_root" 
                   template="MiniOrange_OAuth::oidc_error_message.phtml" 
                   before="-"/>
        </referenceContainer>
        
        <referenceBlock name="messages" ifconfig="">
            <block class="MiniOrange\OAuth\Block\Adminhtml\OidcErrorMessage" 
                   name="oidc_error_message_messages" 
                   template="MiniOrange_OAuth::oidc_error_message.phtml" 
                   after="-"/>
        </referenceBlock>
        
        <!-- SSO Login Button â€” jetzt in form.additional.info statt form.buttons -->
        <referenceContainer name="form.additional.info">
            <block class="MiniOrange\OAuth\Block\OAuth" 
                name="miniorange.oauth.admin.link" 
                template="adminssobutton.phtml"
                after="-">
                <arguments>
                    <argument name="oidc_visibility" xsi:type="object">
                        MiniOrange\OAuth\ViewModel\OidcLoginVisibility
                    </argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
