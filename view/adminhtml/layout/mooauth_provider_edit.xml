<?xml version="1.0"?>
<!--
    Layout for the Add / Edit OIDC Provider form (mooauth/provider/edit).
    Uses Widget\Form\Container (Edit.php) with Widget\Tabs sidebar navigation.
    Three tabs: Provider Settings | OAuth Settings | Attribute Mapping.
-->
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="editor"/>
    <body>
        <referenceContainer name="content">
            <block class="MiniOrange\OAuth\Block\Adminhtml\Provider\Edit"
                   name="mooauth_provider_edit">
                <block class="MiniOrange\OAuth\Block\Adminhtml\Provider\Edit\Tabs"
                       name="mooauth_provider_edit_tabs">
                    <block class="MiniOrange\OAuth\Block\Adminhtml\Provider\Edit\Tab\ProviderSettings"
                           name="mooauth.provider.tab.settings"/>
                    <block class="MiniOrange\OAuth\Block\Adminhtml\Provider\Edit\Tab\OAuthSettings"
                           name="mooauth.provider.tab.oauth"/>
                    <block class="MiniOrange\OAuth\Block\Adminhtml\Provider\Edit\Tab\AttributeMapping"
                           name="mooauth.provider.tab.attrs"/>
                </block>
            </block>
        </referenceContainer>
    </body>
</page>
