includes:
    - %rootDir%/../../bitexpert/phpstan-magento/extension.neon

parameters:
    phpVersion: 80300  # PHP 8.3.0
    level: 4
    paths:
        - .
    excludePaths:
        analyseAndScan:
            - vendor (?)
            - .github
            # Stub file defines minimal class skeletons for CI-only PHPUnit use;
            # scanning it would override PHPStan's real Magento type knowledge.
            - Test/Stubs
        analyse:
            - psalm-stubs.stub
            - rector.php
    scanFiles:
        - psalm-stubs.stub
